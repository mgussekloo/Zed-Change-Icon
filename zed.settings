// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"search": {
		"button": false,
	},
	"project_panel": {
		"button": true,
	},
	"tab_bar": {
		"show_nav_history_buttons": false,
	},
	"format_on_save": "off",
	"redact_private_values": true,
	"disable_ai": false,
	"ai": {
		"excluded_paths": [
			"**/*.sql",
			"**/*.csv",
			".env",
			".env.*",
			"secrets/",
			"private/",
			"**/*.pem",
			"**/*.key",
			"**/id_rsa*",
			"**/.git/**",
			"**/node_modules/**",
			"**/vendor/**",
			"**/dist/**",
			"**/build/**",
			"**/target/**",
			"**/*.log",
		],
	},
	"prettier": {
		"allowed": true,
	},
	"show_completions_on_input": true, // Show completions while typing
	"show_completion_documentation": false, // Show documentation in completions
	"auto_signature_help": true, // Show method signatures inside parentheses

	"edit_predictions": {
		"enabled": false,
		"mode": "subtle",
		"enabled_in_text_threads": false,
	},
	"inlay_hints": {
		"enabled": false,
		// Toggle certain types of hints on and off, all switched on by default.
		"show_type_hints": true,
		"show_parameter_hints": false,
		"show_other_hints": false,

		// Whether to show a background for inlay hints (theme `hint.background`)
		"show_background": true, //

		// Time to wait after editing before requesting hints (0 to disable debounce)
		"edit_debounce_ms": 700,
		// Time to wait after scrolling before requesting hints (0 to disable debounce)
		"scroll_debounce_ms": 50,

		// A set of modifiers which, when pressed, will toggle the visibility of inlay hints.
		"toggle_on_modifiers_press": {
			"control": false,
			"shift": false,
			"alt": false,
			"platform": false,
			"function": false,
		},
	},

	"colorize_brackets": false,
	"minimum_contrast_for_highlights": 45.0,
	"hard_tabs": true,
	"tab_size": 4,
	"max_tabs": 10,
	"experimental.theme_overrides": {
		// "terminal.background": "#282828ff",
		"terminal.foreground": "#F2CF67",
		"editor.document_highlight.bracket_background": "#8A73AB",
	},
	"icon_theme": "Catppuccin Mocha",

	"show_edit_predictions": false,
	"selection_highlight": true,
	"message_editor": {
		"auto_replace_emoji_shortcode": false,
	},
	"middle_click_paste": false,
	"tasks": {
		"enabled": false,
	},

	"use_on_type_format": false,
	"gutter": {
		"breakpoints": false,
		"runnables": false,
	},
	"hover_popover_enabled": false,
	"debugger": {
		"button": false,
		"save_breakpoints": false,
	},
	"git": {
		"inline_blame": {
			"enabled": false,
		},
	},
	"diagnostics": {
		"button": false,
		"lsp_pull_diagnostics": {
			"enabled": false,
		},
	},
	"completions": {
		"lsp": false,
		"lsp_fetch_timeout_ms": 0,
	},
	"global_lsp_settings": {
		// Show/hide the LSP button in the status bar.
		// Activity from the LSP is still shown.
		// Button is not shown if "enable_language_server" if false.
		"button": false,
	},
	"linked_edits": false,
	"inline_code_actions": false,
	"agent": {
		"dock": "right",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4-5",
		},
		"use_modifier_to_send": true,
		"enable_feedback": false,
		"single_file_review": false,
		"model_parameters": [],
	},
	// "agent": {
	// 	"default_model": {
	// 		"provider": "ollama",
	// 		"model": "qwen2.5-coder:3b",
	// 	},
	// 	"openai": {
	// 		"api_base": "http://localhost:11434/v1",
	// 		"api_key": "ollama",
	// 	},
	// 	"use_modifier_to_send": true,
	// 	"enable_feedback": false,
	// 	"single_file_review": false,
	// },

	"multi_cursor_modifier": "cmd_or_ctrl",
	"theme": "Dracula Solid",
	"ui_font_size": 16,
	"buffer_font_size": 14.0,
	"buffer_font_family": "Recursive Mono Casual Static",
	"buffer_line_height": { "custom": 1.5 },
	"base_keymap": "SublimeText",

	// Control which items are shown/hidden in the title bar
	"title_bar": {
		"show_user_menu": false,
		"show": "never", // When to show: always | never | hide_in_full_screen
		"show_branch_icon": false, // Show/hide branch icon beside branch switcher
		"show_branch_name": false, // Show/hide branch name
		"show_project_items": false, // Show/hide project host and name
		"show_onboarding_banner": false, // Show/hide onboarding banners
		"show_user_picture": false, // Show/hide user avatar
		"show_sign_in": false, // Show/hide sign-in button
		"show_menus": false, // Show/hide menus
	},
	"outline_panel": { "button": false },
	"git_panel": { "button": false },
	"collaboration_panel": { "button": false },

	"status_bar": {
		"cursor_position_button": true,
		"active_language_button": true,
		"experimental.show": true,
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false,
	},
	"tabs": {
		"file_icons": true,
		"git_status": true,
	},
	"toolbar": {
		"breadcrumbs": false, // Whether to show breadcrumbs.
		"quick_actions": false, // Whether to show quick action buttons.
		"selections_menu": false, // Whether to show the Selections menu
		"agent_review": false, // Whether to show agent review buttons
		"code_actions": false, // Whether to show code action buttons
	},
	"terminal": {
		"dock": "bottom", // Where to dock: left, right, bottom
		"button": false, // Show/hide status bar icon
		"default_width": 640, // Default width (left/right docked)
		"default_height": 320, // Default height (bottom docked)

		// Set the cursor blinking behavior in the terminal (on, off, terminal_controlled)
		"blinking": "terminal_controlled",
		// Default cursor shape for the terminal cursor (block, bar, underline, hollow)
		"cursor_shape": "block",

		// Terminal Font Settings
		"font_family": "IBM Plex Mono",
		"font_size": 14,
		"font_weight": 400,

		// Terminal line height: comfortable (1.618), standard(1.3) or `{ "custom": 2 }`
		"line_height": "standard",
		"toolbar": {
			"breadcrumbs": false,
		},
	},
	"languages": {
		"PHP": {
			"language_servers": ["intelephense", "!phpactor", "!phptools"],
		},
	},
}
